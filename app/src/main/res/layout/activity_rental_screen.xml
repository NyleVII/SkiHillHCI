<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rental_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nylecpsc481.skihillhci.RentalScreenActivity">

    <TextView
        android:text="Choose your rental equipment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <Button
        android:text="RESERVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

    <TextView
        android:text="Skis:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView2" />

    <NumberPicker
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/numberPicker3"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Snowboards:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:paddingBottom="10dp"
        android:layout_alignBaseline="@+id/numberPicker11"
        android:layout_alignBottom="@+id/numberPicker11"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <NumberPicker
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="42dp"
        android:id="@+id/numberPicker11"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/numberPicker3"
        android:layout_alignStart="@+id/numberPicker3" />

    <NumberPicker
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/numberPicker11"
        android:layout_alignStart="@+id/numberPicker11"
        android:layout_marginTop="28dp"
        android:id="@+id/numberPicker12" />

    <TextView
        android:text="Helmets:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/numberPicker12"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:id="@+id/textView11" />

    <DatePicker
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/datePicker2"
        android:layout_above="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp" />

    <TextView
        android:text="Choose a date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignTop="@+id/datePicker2"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginTop="14dp" />

</RelativeLayout>
