<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background__snow_flipped"
    tools:context="nylecpsc481.skihillhci.MainActivity">

    <Button
        android:text="@string/EMERGENCY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:id="@+id/button3"
        tools:text="EMERGENCY"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:onClick="openEmergency" />

    <Button
        android:text="MAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapButton"
        android:onClick="openMap"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:text="Change Hill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/changeHillButton"
        android:onClick="changeHill"/>

    <Button
        android:text="Directions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directionsButton"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="directionsToHill"/>

    <Button
        android:text="Lift Tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LiftTicketsButton"
        android:onClick="openLiftTickets"
        android:layout_below="@+id/rentalsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sunshine Village:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView49"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Snowfall in the last 24 hours: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView50"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_below="@+id/textView49"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="47 cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView48"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView50"
        android:layout_alignBottom="@+id/textView50"
        android:layout_toRightOf="@+id/textView50"
        android:layout_toEndOf="@+id/textView50" />

    <Button
        android:text="RENTALS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rentalsButton"
        android:onClick="openRentals"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/textView50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/sunshine_tall"
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/rentalsButton"
        android:layout_toRightOf="@+id/textView49"
        android:layout_toEndOf="@+id/textView49" />

</RelativeLayout>
